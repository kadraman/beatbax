{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"],
    "jsx": "preserve",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "references": [
    { "path": "./packages/engine" },
    { "path": "./packages/cli" },
    { "path": "./apps/web-ui" }
  ],
  "include": [],
  "exclude": ["node_modules", "dist"]
}
