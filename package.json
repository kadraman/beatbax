{
  "name": "beatbax",
  "version": "0.1.0",
  "description": "Live-coding language for retro console chiptunes.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "beatbax": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && node scripts/fix-imports.cjs",
    "watch": "tsc --watch",
    "dev": "tsc --watch & node dist/index.js",
    "cli": "npm run build && node dist/cli.js",
    "cli:dev": "tsx src/cli.ts",
    "cli:debug": "node --loader ts-node/esm src/cli-dev.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "dependencies": {
    "commander": "^12.0.0",
    "midiconvert": "^0.4.7",
    "tone": "^14.8.49"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.7.4",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.3.3",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^5.6.3"
  }
}
