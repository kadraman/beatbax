{
  "name": "beatbax",
  "version": "0.1.0",
  "private": true,
  "description": "Live-coding language for retro console chiptunes.",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "clean-all": "npm -w @beatbax/engine run clean && npm -w @beatbax/cli run clean && npm -w @beatbax/web-ui run clean",
    "build-all": "npm run engine:build && npm run cli:build && node scripts/add-js-extensions.cjs && node scripts/check-dist.cjs && node scripts/link-local-engine.cjs",
    "engine:build": "npm -w @beatbax/engine run build",
    "engine:test": "npm -w @beatbax/engine test",
    "engine:dev": "npm -w @beatbax/engine run dev",
    "engine:clean": "npm -w @beatbax/engine run clean",
    "cli:build": "npm -w @beatbax/cli run build",
    "cli:test": "npm -w @beatbax/cli test",
    "cli:dev": "npm run engine:build && npm -w @beatbax/cli run dev",
    "cli:clean": "npm -w @beatbax/cli run clean",
    "cli:debug": "node --loader ts-node/esm packages/cli/src/cli-dev.ts",
    "web-ui:build": "npm -w @beatbax/web-ui run build",
    "web-ui:test": "npm -w @beatbax/web-ui test",
    "web-ui:dev": "npm -w @beatbax/web-ui run dev",
    "rebuild": "npm run clean && npm run build",
    "prepublishOnly": "npm run build",
    "watch": "tsc --watch",
    "dev": "npm run engine:build && npm -w @beatbax/engine run dev",
    "cli": "node scripts/cli-wrapper.js",
    "cli:ensure": "npm run cli:build --if-present",
    "test": "npm run engine:test && npm run cli:test",
    "bin": "node bin/beatbax",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "validate-ast": "node scripts/validate-ast.cjs"
  },
  "bin": {
    "beatbax": "bin/beatbax"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "marked": "^5.1.1",
    "midiconvert": "^0.4.7",
    "tone": "^14.8.49"
  },
  "files": [
    "packages/engine/dist",
    "packages/cli/dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.7.4",
    "ajv": "^8.17.1",
    "esbuild": "^0.18.17",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.3.3",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^5.6.3"
  }
}
