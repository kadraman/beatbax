{
  "name": "beatbax",
  "version": "0.1.0",
  "description": "Live-coding language for retro console chiptunes.",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    "./scheduler": {
      "import": "./dist/scheduler/index.js",
      "types": "./dist/scheduler/index.d.ts"
    }
  },
  "types": "dist/index.d.ts",
  "bin": {
    "beatbax": "dist/cli.js"
  },
  "scripts": {
    "demo": "npx http-server demo -p 8080",
    "build:demo": "esbuild demo/boot.ts --bundle --outfile=demo/dist/demo.js --platform=browser --target=es2019 --sourcemap",
    "build": "tsc && node scripts/fix-imports.cjs && node scripts/check-dist.cjs",
    "prepublishOnly": "npm run build",
    "watch": "tsc --watch",
    "dev": "tsc --watch & node dist/index.js",
    "cli": "npm run build && node dist/cli.js",
    "cli:dev": "tsx src/cli.ts",
    "cli:debug": "node --loader ts-node/esm src/cli-dev.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "dependencies": {
    "commander": "^12.0.0",
    "marked": "^5.1.1",
    "midiconvert": "^0.4.7",
    "tone": "^14.8.49"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "esbuild": "^0.18.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.7.4",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.3.3",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^5.6.3"
  }
}
