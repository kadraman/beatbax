{
  "name": "beatbax",
  "version": "0.1.0",
  "private": true,
  "description": "Live-coding language for retro console chiptunes.",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  
  "scripts": {
    "demo:build": "esbuild demo/boot.ts --bundle --outfile=demo/dist/demo.js --platform=browser --target=es2019 --sourcemap --external:marked",
    "demo:run": "npx http-server demo -p 8080",
    "engine:build": "npm -w @beatbax/engine run build",
    "engine:test": "npm -w @beatbax/engine test",
    "cli:build": "npm -w @beatbax/cli run build",
    "cli:test": "npm -w @beatbax/cli test",

    "build": "npm run engine:build && npm run cli:build && node scripts/add-js-extensions.cjs && node scripts/check-dist.cjs && node scripts/link-local-engine.cjs && npm run demo:build",
    "prepublishOnly": "npm run build",
    "watch": "tsc --watch",
    "dev": "npm run engine:build && npm -w @beatbax/engine run dev",

    "cli": "npm run cli:build && node packages/cli/dist/cli.js",
    "cli:dev": "tsx packages/cli/src/cli.ts",
    "cli:debug": "node --loader ts-node/esm packages/cli/src/cli-dev.ts",

    "test": "npm run engine:test && npm run cli:test",
    "bin": "node bin/beatbax",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "build:web-ui": "npm --prefix apps/web-ui run build",
    "build:site": "npm run engine:build && npm run build:web-ui"
  },
  "bin": {
    "beatbax": "bin/beatbax"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "marked": "^5.1.1",
    "midiconvert": "^0.4.7",
    "tone": "^14.8.49"
  },
  "files": [
    "packages/engine/dist",
    "packages/cli/dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "esbuild": "^0.18.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.7.4",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.3.3",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^5.6.3"
  }
}